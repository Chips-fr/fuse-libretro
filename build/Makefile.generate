CORE_DIR = ..
ROMS     =
SNAPS    =

include Makefile.common

HEADERS = $(ROMS:.rom=.h) $(SNAPS:.szx=.h)

%.h: %.rom
	xxd -i $< | sed "s/unsigned/const unsigned/g" | sed "s/ _*/ /g" > $@

%.h: %.szx
	xxd -i $< | sed "s/unsigned/const unsigned/g" | sed "s/ _*/ /g" > $@

all: $(HEADERS)

clean:
	rm -f $(HEADERS)

.PHONY: clean
